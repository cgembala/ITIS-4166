<%- include('../partials/header.ejs')%>

    <div class="content">
        <% if(events.length) { %>
            <% if(Hiking.length) { %>
                <div>
                    <h2>Hiking</h2>
                    <ul>
                        <% Hiking.forEach(event=> { %>

                            <li>
                                <a href="/events/<%= event.id %>">
                                    <%= event.title %>
                                </a>
                            </li>

                            <% }) %>
                    </ul>
                </div>
                <% } %>
                    <% if(Camping.length) { %>
                        <div>
                            <h2>Camping</h2>
                            <ul>
                                <% Camping.forEach(event=> { %>

                                    <li>
                                        <a href="/events/<%= event.id %>">
                                            <%= event.title %>
                                        </a>
                                    </li>

                                    <% }) %>
                            </ul>
                        </div>
                        <% } %>
                            <% if(Biking.length) { %>
                                <div>
                                    <h2>Biking</h2>
                                    <ul>
                                        <% Biking.forEach(event=> { %>

                                            <li>
                                                <a href="/events/<%= event.id %>">
                                                    <%= event.title %>
                                                </a>
                                            </li>

                                            <% }) %>
                                    </ul>
                                </div>
                                <% } %>
                                    <% if(Backpacking.length) { %>
                                        <div>
                                            <h2>Backpacking</h2>
                                            <ul>
                                                <% Backpacking.forEach(event=> { %>

                                                    <li>
                                                        <a href="/events/<%= event.id %>">
                                                            <%= event.title %>
                                                        </a>
                                                    </li>

                                                    <% }) %>
                                            </ul>
                                        </div>
                                        <% } %>
                                            <% if(Other.length) { %>
                                                <div>
                                                    <h2>Other</h2>
                                                    <ul>
                                                        <% Other.forEach(event=> { %>

                                                            <li>
                                                                <a href="/events/<%= event.id %>">
                                                                    <%= event.title %>
                                                                </a>
                                                            </li>

                                                            <% }) %>
                                                    </ul>
                                                </div>
                                                <% } %>
                                                    <% } else { %>
                                                        <h2>There are no events to display.</h2>
                                                        <% } %>
    </div>
    <%- include('../partials/footer.ejs')%>