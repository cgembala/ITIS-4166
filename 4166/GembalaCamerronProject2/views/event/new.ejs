<%- include('../partials/header.ejs')%>
<div class = "content">
    <form action = '/events' method = 'POST' class="new-form" enctype="multipart/form-data">
        <label for="author">Host</label>
        <input type="text" id="author" name="author" required>

        <label for='title'> Title </label>
        <input type="title" id="title" name="title">

        <label for='location'> Location </label>
        <input type="text" id="location" name="location" required>

        <label for="category">Event</label>
        <select name="category" id="category" required>
            <option class="dropdown" value="Hiking">Hiking</option>
            <option class="dropdown" value="Camping">Camping</option>
            <option class="dropdown" value="Mountain Biking">Mountain Biking</option>
            <option class="dropdown" value="Backpacking">Backpacking</option>
            <option class="dropdown" value="Other">Other</option>
        </select>
        <label for="datestart">Start Date</label>
        <input type="datetime-local" id="date" name="startdate" required>

        <label for="dateend">End Date</label>
        <input type="datetime-local" id="date" name="enddate" required>

        <label for="content">Description</label>
        <textarea rows="5" id="content" name="content" class = "fixed-width" required></textarea>

        <label for="picture">Image</label>
        <input type="file" id="myFile" name="image" required>

        
        <input type="submit" value="Submit">   
    </form>

    </div>
    <%- include('../partials/footer.ejs')%>